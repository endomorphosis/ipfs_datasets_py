FROM python:3.10-slim

# Install minimal system dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy only necessary files
COPY setup.py README.md ./
COPY ipfs_datasets_py/ ./ipfs_datasets_py/

# Install package in development mode
RUN pip install --no-cache-dir -e .

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import ipfs_datasets_py; print('OK')" || exit 1

EXPOSE 8000

CMD ["python", "-c", "import ipfs_datasets_py; print('IPFS Datasets Python is working!'); print('Version:', ipfs_datasets_py.__version__ if hasattr(ipfs_datasets_py, '__version__') else 'unknown')"]

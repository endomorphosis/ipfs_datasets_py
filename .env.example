# IPFS Datasets MCP Dashboard Configuration
# Copy this file to .env and update with your values

# Dashboard Configuration
MCP_DASHBOARD_HOST=0.0.0.0
MCP_DASHBOARD_PORT=8899

# JWT Secret (will be generated if not provided)
JWT_SECRET_KEY=your-secret-key-here

# IPFS Configuration
IPFS_GATEWAY=https://ipfs.io
IPFS_API_HOST=127.0.0.1
IPFS_API_PORT=5001
IPFS_API_URL=http://127.0.0.1:5001

# Database Configuration
DATABASE_PATH=~/.ipfs_datasets/data.db
POSTGRES_URL=postgresql://user:password@localhost:5432/ipfs_datasets
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_PATH=~/.ipfs_datasets/logs

# Optional: Vector Store Configuration
FAISS_INDEX_PATH=~/.ipfs_datasets/faiss_indices
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Optional: GPU Configuration
CUDA_VISIBLE_DEVICES=0
ENABLE_GPU=false

# Optional: Authentication
ENABLE_AUTH=false

# Optional: OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Error Reporting Configuration
# Enable automatic error reporting to GitHub issues
ERROR_REPORTING_ENABLED=false
# GitHub repository for error issues (defaults to endomorphosis/ipfs_datasets_py)
# GITHUB_REPOSITORY=owner/repo
# GitHub token for authentication (can also use GH_TOKEN)
# GITHUB_TOKEN=your_github_token_here
